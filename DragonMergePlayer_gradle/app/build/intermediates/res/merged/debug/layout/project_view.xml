<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <TextView android:id="@+id/txtprojectdate" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFFFF" 
        android:singleLine="true"
        android:text="text"
        android:textSize="16sp" />
    
	<FrameLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent"
	    android:layout_centerHorizontal="true"
	    android:id="@+id/logoframelayout"
	    android:padding="20px" 
	    android:layout_above="@+id/txtprojectdate">
	    
	    <ImageView android:id="@+id/imgprojectlogo" 
	        android:scaleType="centerInside"
	        android:layout_width="fill_parent" 
	        android:layout_height="fill_parent" />
	    
	</FrameLayout>
    
    <ImageButton android:id="@+id/btnremove" 
        android:scaleType="centerInside" 
        android:background="@drawable/ic_remove" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" />
    
</RelativeLayout>