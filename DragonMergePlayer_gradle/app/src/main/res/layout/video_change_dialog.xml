<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <Button android:id="@+id/btnchangephoto" 
        android:text="Replace the photo"
        android:textSize="30dip"
        android:layout_margin="10dip"
        android:gravity="center"
        android:layout_width="fill_parent" 
        android:layout_height="60dip" />
	    
    <Button android:id="@+id/btnchangevideo" 
        android:text="Replace the video"
        android:textSize="30dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:layout_width="fill_parent" 
        android:layout_height="60dip" />

    <Button android:id="@+id/btnremove" 
        android:text="Delete"
        android:textSize="30dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:layout_width="fill_parent" 
        android:layout_height="60dip" />
    
</LinearLayout>